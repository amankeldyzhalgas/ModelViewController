@model ModelViewController.Models.ChangeUserAwardModel

@{
    ViewData["Title"] = "AddAwards";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>AddAwards</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddAwards" enctype="multipart/form-data" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <div class="row">
                    @if (Model.UserAwards != null)
                    {
                        for (int i = 0; i < Model.UserAwards.Count(); i++)
                        {
                            <div class="col-md-3">
                                <div class="custom-control custom-checkbox image-checkbox">
                                    <input type="hidden" asp-for="UserAwards[i].AwardId" />
                                    <label asp-for="UserAwards[i].Title">
                                        <input asp-for="UserAwards[i].Selected" type="checkbox" />
                                        <img class="img-fluid" src="@Model.UserAwards[i].Image" title="@Model.UserAwards[i].Title" />
                                    </label>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>

